# https://prometheus.io

global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
    metrics_path: /prometheus/metrics

  - job_name: 'linux'
    static_configs:
      - targets:
{% for vm in groups['all'] %}
          - {{ vm }}:9100
{% endfor %}


  - job_name: 'bind'
    static_configs:
      - targets:
        {% for vm in groups['dns_servers'] %}
        - {{ vm }}:9119
        {% endfor %}

  - job_name: 'nginx'
    static_configs:
      - targets:
        {% for vm in groups['web_servers'] %}
        - {{ vm }}:9113
        {% endfor %}

  - job_name: 'mysql'
    static_configs:
      - targets:
        {% for vm in groups['db_servers'] %}
        - {{ vm }}:9104
        {% endfor %}

