acl lan {
    {% for n in lan_ip %}
    {{ n }};
    {% endfor %}
};


options {
  directory "/var/lib/bind";

  forwarders {
      {% for n in forwarders %}
      {{ n }};
      {% endfor %}
  };

  allow-query { lan; };
  dnssec-validation no;
};

statistics-channels {
	inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};
