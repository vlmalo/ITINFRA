$TTL	604800
talkmate.it.	IN	SOA	vm1.talkmate.it. vlad.talkmate.it. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{% for vm in groups['dns_servers'] %}
talkmate.it.	IN	NS	{{ vm }}
{% endfor %}
{% for vm in groups['all'] %}
{{ vm }}	IN	A	{{ hostvars[vm]['ansible_default_ipv4']['address'] }}
{% endfor %}
