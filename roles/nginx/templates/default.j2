server {
        listen 80 default_server;
        server_name _;

        location / {
                uwsgi_pass localhost:5000;
                include uwsgi_params;
       }

{% if inventory_hostname in groups['grafana'] %}
        location /grafana {
        proxy_set_header Host $http_host;
        proxy_pass http://localhost:3000;
        }
{% endif %}

        location /prometheus {
	proxy_pass http://vlmalo-2:9090;
        }

}

                                            
